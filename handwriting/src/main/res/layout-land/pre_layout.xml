<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/secure"
            android:onClick="onImageClick" android:nestedScrollingEnabled="false"
            android:layout_alignBottom="@+id/login" android:layout_centerHorizontal="true"
            android:layout_marginBottom="43dp"/>
    <Button
            android:text="@string/logup"
            android:id="@+id/login"
            android:onClick="onLogupClick"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/buttonshape_up"
            android:shadowColor="#8BA8A6"
            android:shadowDx="1"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:layout_centerVertical="true" android:layout_toLeftOf="@+id/imageView1"
            android:layout_toStartOf="@+id/imageView1" android:layout_marginRight="53dp"
            android:layout_marginEnd="53dp" android:clickable="true"/>
    <Button
            android:text="@string/login"
            android:id="@+id/logup"
            android:onClick="onLoginClick"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/buttonshape_in"
            android:shadowColor="#8BA8A6"
            android:shadowDx="1"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:layout_marginLeft="43dp" android:layout_marginStart="43dp"
            android:layout_marginTop="51dp" android:layout_alignTop="@+id/login"
            android:layout_toRightOf="@+id/imageView1" android:layout_toEndOf="@+id/imageView1"
            android:clickable="true"/>
</RelativeLayout>